digraph "State Machine" {
	graph [color=black directed=true fillcolor=white label="State Machine" rankdir=LR "strict"=false style=solid]
	node [color=black fillcolor=white peripheries=1 shape=rectangle style="rounded, filled"]
	edge [color=black]
	user [label=user]
	state1 [label=state1]
	state2 [label=state2 color=blue fillcolor=azure2 peripheries=1]
	menu [label=menu color=red fillcolor=darksalmon peripheries=2]
	user -> menu [label="advance [is_going_to_menu]"]
	user -> state1 [label="advance [is_going_to_state1]"]
	user -> state2 [label="advance [is_going_to_state2]"]
	state1 -> menu [label="advance [is_going_backmenu]"]
	state2 -> menu [label="advance [is_going_backmenu]" color=blue]
}
